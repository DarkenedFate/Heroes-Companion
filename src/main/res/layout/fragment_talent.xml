<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jt.heroes.TalentFragment">

    <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
        android:id="@+id/rvTalents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dat_purple"
        android:scrollbarStyle="outsideOverlay"
        android:layout_toRightOf="@+id/btnAll"
        android:layout_toEndOf="@+id/btnAll"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:id="@+id/btnAll"
        android:elevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:background="@color/purple_700"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btnLvl1"
        android:background="@color/purple_900"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/btnAll"
        android:layout_alignLeft="@+id/btnAll"
        android:layout_alignStart="@+id/btnAll"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btnLvl4"
        android:background="@color/purple_900"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/btnLvl1"
        android:layout_alignLeft="@+id/btnLvl1"
        android:layout_alignStart="@+id/btnLvl1"
        android:layout_marginTop="16dp" />

</RelativeLayout>
