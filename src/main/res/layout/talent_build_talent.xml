<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/toolbar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/tvTalentLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="LEVEL 1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvTalentLevel"
        android:background="@color/divider_color" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivTalentImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view2"
        android:layout_marginTop="16dp"
        android:src="@drawable/greatercleave"
        app:riv_border_color="#000000"
        app:riv_border_width="4dp"
        app:riv_corner_radius="100dp" />

    <TextView
        android:id="@+id/tvTalentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivTalentImage"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/ivTalentImage"
        android:layout_toRightOf="@+id/ivTalentImage"
        android:fontFamily="sans-serif-light"
        android:text="Greater Cleave"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTalentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTalentName"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/ivTalentImage"
        android:layout_toRightOf="@+id/ivTalentImage"
        android:lineSpacingExtra="2dp"
        android:fontFamily="sans-serif-light"
        android:text="Increases the radius of Cleave by 33%."
        android:textColor="@color/white"
        android:textSize="14sp"
        android:elegantTextHeight="false" />

</RelativeLayout>