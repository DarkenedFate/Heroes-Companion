<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/recycler_view_container"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_alignTop="@+id/ivHeroIcon"
        android:layout_toRightOf="@+id/ivHeroIcon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-8dp"
        android:textColor="#FFFFFF" />

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_corner_radius="100dip"
        app:riv_border_width="4dip"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/ivHeroIcon"
        android:src="@drawable/arthas"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvTitle"
        android:fontFamily="sans-serif-light"
        android:textSize="16dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/ivHeroIcon"
        android:layout_toEndOf="@+id/ivHeroIcon"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:fontFamily="sans-serif-light"
        android:id="@+id/tvDescription"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/ivHeroIcon"
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ivRoleIcon"
        android:layout_below="@+id/ivHeroIcon"
        android:layout_alignLeft="@+id/ivHeroIcon"
        android:layout_alignStart="@+id/ivHeroIcon"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/warrior" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ivFranchiseIcon"
        android:layout_below="@+id/ivHeroIcon"
        android:layout_toStartOf="@+id/tvDescription"
        android:layout_toLeftOf="@+id/tvDescription"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/diablogame" />
</RelativeLayout>