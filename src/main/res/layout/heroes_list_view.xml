<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/recycler_view_container"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/sorta_dark_purple"
    android:paddingBottom="24dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:id="@+id/ivBigHeroImage"
        android:src="@drawable/arthasbig"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:transitionName="@string/transition_name_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:fontFamily="sans-serif-light"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/ivHeroIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="32dp"
        android:transitionName="@string/transition_name_name"/>

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_corner_radius="100dip"
        app:riv_border_width="4dip"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/ivHeroIcon"
        android:src="@drawable/arthas"
        android:layout_alignBottom="@+id/ivBigHeroImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvTitle"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-32dp"
        android:transitionName="@string/transition_name_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:fontFamily="sans-serif-light"

        android:id="@+id/tvDescription"
        android:textColor="#B3FFFFFF"
        android:layout_below="@+id/ivHeroIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/ivRoleIcon"
        android:src="@drawable/warrior"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/ivFranchiseIcon"
        android:src="@drawable/warcraftgame"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivRoleIcon"
        android:layout_toEndOf="@+id/ivRoleIcon"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warrior"
        android:id="@+id/tvRole"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textColor="#B3FFFFFF"
        android:layout_below="@+id/tvTitle"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFree"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/freebanner"
        android:layout_marginRight="-16dp"
        android:layout_marginTop="-16dp"
        android:visibility="invisible" />

</RelativeLayout>