<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient_bg"
    tools:context="com.example.jt.heroes.TalentFragment">

    <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
        android:id="@+id/rvTalents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout"
        android:scrollbarStyle="outsideOverlay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap on a talent to select it!"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/rvTalents"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/tvHelpText" />

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/fabSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivTalentImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            app:riv_border_color="#000000"
            app:riv_border_width="1dp"
            app:riv_corner_radius="0dp"
            android:layout_weight="1"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivLvl4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            app:riv_border_color="#000000"
            app:riv_border_width="1dp"
            app:riv_corner_radius="0dp"
            android:layout_weight="1"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivLvl7"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:riv_border_color="#000000"
            app:riv_border_width="1dp"
            app:riv_corner_radius="0dp"
            android:layout_weight="1"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivLvl10"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:riv_border_color="#000000"
            app:riv_border_width="1dp"
            app:riv_corner_radius="0dp"
            android:layout_weight="1"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivLvl13"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:riv_border_color="#000000"
            app:riv_border_width="1dp"
            app:riv_corner_radius="0dp"
            android:layout_weight="1"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivLvl16"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:riv_border_color="#000000"
            app:riv_border_width="1dp"
            app:riv_corner_radius="0dp"
            android:layout_weight="1"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivLvl20"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:riv_border_color="#000000"
            app:riv_border_width="1dp"
            app:riv_corner_radius="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>
