<resources>

    <color name="light_primary">#FFD1C4E9</color>
    <color name="primary">#FF673AB7</color>
    <color name="dark_primary">#FF512DA8</color>
    <color name="accent">#FF448AFF</color>
    <color name="secondary_text">#FF727272</color>
    <color name="divider_color">#FFB6B6B6</color>
    <color name="gray_900">#FF212121</color>
    <color name="white">#FFFFFFFF</color>
    <color name="deep_purple_300">#9575CD</color>
    <color name="red_500">#F44336</color>
    <color name="blue_500">#2196F3</color>
    <color name="purple_500">#9C27B0</color>
    <color name="teal_500">#009688</color>
    <color name="sorta_dark_purple">#271559</color>
    <color name="really_dark_purple">#150c35</color>
    <color name="super_dark_purple">#0e0521</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/purple_gradient_bg</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/dark_primary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>


    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">-2dp</item>
    </style>



</resources>
